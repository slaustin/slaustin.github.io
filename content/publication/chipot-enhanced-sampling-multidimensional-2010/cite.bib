 file = {/Users/stevenaustin/Zotero/storage/CSE3YWNU/Enhanced sampling of multidimensional free-energy landscapes using adaptive biasing forces.pdf},
 title = {Enhanced Sampling of Multidimensional Free-Energy Landscapes Using Adaptive Biasing Forces},
 year = {2010}
}
